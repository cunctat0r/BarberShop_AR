<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th> Имя </th>
			<th> Телефон </th>
			<th> Дата записи </th>
			<th> Мастер </th>
			<th> Цвет </th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |client| %>
			<tr>
				<td><a href="/client/<%= client.id %>"><%= client.name %></a></td>
				<td><%= client.phone %></td>
				<td><%= client.datestamp %></td>
				<td><%= client.barber %></td>
				<td style="background-color: <%= client.color %>"><%= client.color %></td>
			</tr>
		<% end %>	
	</tbody>
</table>